#include <stdio.h>
#include <ctype.h>

#define SIZE 100

char stack[SIZE];
int top = -1;

void push(char ch) {
    stack[++top] = ch;
}

char pop() {
    return stack[top--];
}

int priority(char op) {
    if (op == '+' || op == '-') return 1;
    if (op == '*' || op == '/') return 2;
    return 0;
}

int main() {
    char infix[SIZE], postfix[SIZE];
    int i = 0, j = 0;
    printf("Enter a valid infix expression: ");
    scanf("%s", infix);
    while (infix[i] != '\0') {
        char ch = infix[i];
        if (isalnum(ch))
            postfix[j++] = ch;
        else if (ch == '(')
            push(ch);
        else if (ch == ')') {
            while (top != -1 && stack[top] != '(')
                postfix[j++] = pop();
            pop();
        } else {
            while (top != -1 && priority(stack[top]) >= priority(ch))
                postfix[j++] = pop();
            push(ch);
        }
        i++;
    }
    while (top != -1)
        postfix[j++] = pop();
    postfix[j] = '\0';
    printf("The postfix expression is: %s\n", postfix);
    return 0;
}
